<br>
 <div class="row">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="large-12 columns">
      <center>
        <h2>Log in</h2><hr><br>

          <div class="row">
            <div class="small-6">

              <div class="row">
                <div class="small-3 columns">
                  <%= f.label :email, class: 'right inline'%>
                </div>
                <div class="small-9 columns">
                  <%= f.email_field :email, autofocus: true, placeholder: 'name@example.com' %>
                </div>
              </div>

              <div class="row">
                <div class="small-3 columns">
                  <%= f.label :password, class: 'right inline' %>
                </div>
                <div class="small-9 columns">
                  <%= f.password_field :password, autocomplete: "off", placeholder: '***********' %>
                </div>
              </div>

              <br>
              <div class="row">
                <%= f.submit "Log in", class: 'button' %>
              </div>
            </div>
          </div>
      </center>

    </div>

  <% end %>
</div>

