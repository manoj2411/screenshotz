<br>
 <div class="row">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="large-12 columns">
      <center>
        <h2>Sign up</h2><hr><br>
        <%= devise_error_messages! %>

          <div class="row">
            <div class="small-6">

              <div class="row">
                <div class="small-3 columns">
                  <%= f.label :email, class: 'right inline'%>
                </div>
                <div class="small-9 columns">
                  <%= f.email_field :email, autofocus: true, placeholder: 'name@example.com' %>
                </div>
              </div>

              <div class="row">
                <div class="small-3 columns">
                  <%= f.label :password, class: 'right inline' do %>
                    Password <small><i>(<%= @minimum_password_length %>)characters minimum</i></small>
                  <% end %>
                </div>
                <div class="small-9 columns">
                  <%= f.password_field :password, autocomplete: "off", placeholder: '***********' %>
                </div>
              </div>

              <div class="row">
                <%= f.submit "Sign up", class: 'button' %>
              </div>
            </div>
          </div>
      </center>

    </div>

  <% end %>
</div>
