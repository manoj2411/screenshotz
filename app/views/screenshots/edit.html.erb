 <div class="row">
  <div class="large-4 columns">
    <%= form_for(@screenshot) do |f| %>
      <div class="row collapse prefix-radius">
        <div class="small-2 columns">
          <span class="prefix">Name</span>
        </div>
        <div class="small-8 columns">
          <%= f.text_field :name %>
        </div>
        <div class="small-2 columns">
          <%= f.submit 'Ok', class: 'button postfix' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="large-4 columns">
    <div class="row collapse postfix-radius">
      <div class="small-3 columns">
        <span class="prefix">Share url:</span>
      </div>
      <div class="small-9 columns">
        <%= text_field_tag :abcd, share_url( @screenshot.sid) %>
      </div>
    </div>
  </div>
  <div class="large-4 columns">
    <div class="row collapse postfix-radius">
      <div class="small-4 columns">
          <span class="label secondary"><big>Views:</big></span> <span class="label round radius"><big><%= @screenshot.views_count %></big></span>
      </div>
      <div class="small-8 columns" style="overflow: scroll;">
        <!-- <span class="label secondary"><big>URL:</big></span> -->
        <span><code><%= @screenshot.url %></code></span>
      </div>
    </div>
  </div>
</div>

<hr>
<%= link_to 'Delete', [@screenshot], class: 'button tiny alert', style: 'float: right;', method: :delete, data: { confirm: 'Are you sure you wanna delete this?' } %>

<%= image_tag @screenshot.image.url %>
